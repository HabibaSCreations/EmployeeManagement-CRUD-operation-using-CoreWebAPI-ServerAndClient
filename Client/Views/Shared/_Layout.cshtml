<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
	<div class="container">
			<a class="navbar-brand" asp-controller="Home" asp-action="Index">🧑‍💻EmployeeManagement</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
		        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Employees" asp-action="Index">Employee List</a>
				</li>
				<li class="nav-item">
						<a class="nav-link" asp-controller="Employees" asp-action="Create">Create Employee</a>
				</li>
			</ul>
		</div>
	</div>
</nav>

<!-- Main Body -->
<div class="container mt-4">
	@RenderBody()
</div>

<!-- Scripts -->
<script src="~/jquery/jquery.min.js"></script>
<script src="~/bootstrap/js/bootstrap.bundle.min.js"></script> 
</body>

</html>
